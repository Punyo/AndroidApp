                android:layout_height="wrap_content"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/howtouse_checkBox1"
                android:button="@drawable/expandablelistview_indicator"
                android:textSize="30sp"
                />
            <TextView
                android:text="@string/howtouse_body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/howtouse_body1"
                android:textSize="15sp" />
        </LinearLayout>

